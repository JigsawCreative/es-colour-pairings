{
  "name": "neilwilliams/es-colour-pairings",
  "description": "Emporio Surfaces Colour Pairings Plugin",
  "autoload": {
    "psr-4": {
      "ESColourPairings\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
    "phpcsstandards/phpcsutils": "^1.1",
    "phpcsstandards/phpcsextra": "^1.4"
  },
  "scripts": {
        "test": "phpunit",
        "cs": "phpcs --standard=WordPress src"
    },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
